Code:
// { Driver Code Starts
#include<bits/stdc++.h>
using namespace std;


 // } Driver Code Ends
class Solution {
  public:
    string longestPalin (string S) {
        // code here
        int n=S.length();
        if(n<2)
        {
            return S;
        }
        int maxLength = 1,start=0,len=0;
        int low,high;
        for(int i=0;i<n;i++)
        {
            low = i-1;
            high = i+1;
            while(high<n && S[high]==S[i])
            {
                high++;
            }
            while(low>=0 && S[low]==S[i])
            {
                low--;
            }
            while(high<n && low>=0  && S[high]==S[low])
            {
                low--;
                high++;
            }
            len = high-low-1;
            if(len>maxLength)
            {
                maxLength=len;
                start = low+1;
            }
            
        }
        string ans = S.substr(start,maxLength);
        return ans;
    }
};

// { Driver Code Starts.

int main()
{
    int t; cin >> t;
    while (t--)
    {
        string S; cin >> S;
        
        Solution ob;
        cout << ob.longestPalin (S) << endl;
    }
}
